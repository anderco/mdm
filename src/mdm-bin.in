MDM_VERSION='@PACKAGE_VERSION@'

prefix=@prefix@
exec_prefix=@exec_prefix@

MDM_PREFIX=${prefix}

MDM_LOGS=@localstatedir@/log/mdm
MDM_RUN=@localstatedir@/run/mdm
MDM_ETC=@sysconfdir@/mdm
MDM_SHARE=@datadir@/mdm
MDM_SCRIPTS=@libdir@/mdm
MDM_LOCALE=@localedir@

CONFIG_FILE=$MDM_ETC/mdm.conf

MDM_DEVICES=$MDM_ETC/devices/
MDM_MODES=$MDM_SHARE/modes/
MDM_PIDS=$MDM_RUN/

MDM_XORG_CONF=$MDM_ETC/xorg.conf.mdm
DISCOVER_DEVICES=$MDM_SCRIPTS/discover-devices
XRANDR_FUNCTIONS=$MDM_SCRIPTS/xrandr-functions

export MDM_VERSION MDM_PREFIX MDM_LOGS MDM_RUN MDM_ETC MDM_SHARE MDM_SCRIPTS \
    MDM_LOCALE CONFIG_FILE MDM_DEVICES MDM_MODES MDM_PIDS MDM_XORG_CONF \
    DISCOVER_DEVICES XRANDR_FUNCTIONS

$MDM_SCRIPTS/mdm-run
